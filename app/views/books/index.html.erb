<div class="container">
  <% if @books.blank? %>
    <p>There are no books in the system</p>
  <% else %>

    <table class="table table-hover">
      <thead class="thead-light">
      <tr>
        <th>book</th>
        <th colspan="2">actions</th>
      </tr>
      </thead>
      <tbody>
      <% @books.each do |b| %>
        <tr>
          <td><%= link_to b.title, show_book_path(b.id) %></td>
          <td><%= link_to "Edit", edit_book_path(b.id) %></td>
          <td><%= link_to "Delete", delete_book_path(b.id), method: :delete, data: {confirm: "Are you sure?"} %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% end %>
  <%= link_to "Create a new book", create_new_book_path %>
</div>