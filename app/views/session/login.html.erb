<div class="container">
  <h1>Login</h1>
  <div class="card col-5 col-lg-4">
    <h2 class="mt-4 mx-auto">Login</h2>
    <%= form_with model: @user, url: login_method_path do |f| %>
      <% if flash[:error] %>
        <div class='alert alert-danger'><%= flash[:error] %></div>
      <% end %>
      <% if flash[:controller_error] %>
        <div class='alert alert-danger'><%= flash[:controller_error] %></div>
      <% end %>
      <div class="form-group col-lg-9 mx-auto">
        <%= label_tag(:username, "Username:", class: "col-form-label") %>
        <%= f.text_field :username, class: "form-control" %>
      </div>
      <div class="form-group col-lg-9 mx-auto">
        <%= label_tag(:password, "Password:", class: "col-form-label") %>
        <%= f.password_field :password, class: "form-control" %>
      </div>
      <div class="text-center mb-4">
        <%= submit_tag "Sign in", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>