<div class="container">
  <table class="table table-hover">
    <thead class="thead-light">
    <tr>
      <h2>Subject: <%= @subject.name %></h2>
    </tr>
    </thead>
    <tbody>
    <h3>books with this subject</h3>
    <% @books.each do |b| %>
      <% if @subject.id == b.subject_id %>
        <tr>
          <td><%= link_to b.title, show_book_path(b.id)%></td>
        </tr>
      <% end %>

    <% end %>
    </tbody>
  </table>
  <%= link_to "Go back home", home_path %>
</div>