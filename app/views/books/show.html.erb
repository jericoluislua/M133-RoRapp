<div class="container">
  <h2><%=@book.title%></h2>
  <table class="table">
    <tr>
      <td><h4>Preis:</h4></td>
      <td><h5>CHF <%=@book.price%></h5></td>
    </tr>
    <tr>
      <td><h4>Subject:</h4></td>
      <!---we need the "subject name because subject was a foreign key id in book"-->
      <td><h5><%=link_to @book.subject.name, show_subject_path(@book.subject_id)%></h5></td>
    </tr>
    <tr>
      <td><h4>Created Date:</h4></td>
      <td><h5><%=@book.created_at%></h5></td>

    <tr>
      <td><h4>Beschreibung:</h4></td>
      <td><h5><%=@book.description%></h5></td>
    </tr>
  </table>
  <br />
  <%=link_to "Go back to the book list", books_path%>
</div>